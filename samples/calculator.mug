const Calculator = struct {
  let mut x: i64
  let mut y: i64
  let mut r: i64

  const Self = Calculator

  pub const PI = 3.14159
  pub const from = fn(x, y: i64): Self {
    new { x: x, y: y }
  }

  pub const sum = fn(self: *Self) { self.r = self.x + self.y }
  pub const sub = fn(self: *Self) { self.r = self.x - self.y }
  pub const mul = fn(self: *Self) { self.r = self.x * self.y }
  pub const div = fn(self: *Self) { self.r = i64!(self.x / self.y) }

  pub const result = fn(self: Self): i64 { self.r }
}

const makeFastSum = fn {
  println!("PI: ", Calculator.PI)

  let mut calc = Calculator.from(1, 2)
  calc.sum()
  let result = calc.result()

  println!("Result: ", result)
}

const main = fn {
  static {
    println!("Compile-Time Executed:")
    makeFastSum()
  }

  println!("Runtime Executed:")
  makeFastSum()
}